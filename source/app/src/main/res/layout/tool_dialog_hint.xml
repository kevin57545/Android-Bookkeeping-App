<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/alertdialog_dialogMargin"
    android:background="#CEE5D0"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alertdialog_titleHeight"
        android:background="#231955"
        android:gravity="center"
        android:text="@string/dialogTitleText"
        android:textColor="@color/alertDialogTitleTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="@dimen/alertdialog_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/alertdialog_actionButtonMargin"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogCheckOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/alertdialog_actionButtonMargin"
            android:layout_weight="1"
            android:backgroundTint="#231955"
            android:text="@string/dialogOKText"
            android:textColor="@color/alertDialogTitleTextColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialogCheckNO"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/alertdialog_actionButtonMargin"
            android:layout_weight="1"
            android:backgroundTint="#231955"
            android:text="@string/dialogCancelText"
            android:textColor="@color/alertDialogTitleTextColor"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>