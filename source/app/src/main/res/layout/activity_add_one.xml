<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/home_add_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"

    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/subpageAppBarTitlePaddingTop"
        android:paddingBottom="@dimen/subpageAppBarTitlePaddingBottom"
        android:text="@string/addOne_submitText"
        android:textColor="@color/subpageAppBarTitleTextColor"
        android:textSize="@dimen/subpageAppBarTitleTextSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_divideLineSize"
        android:background="@color/SecondTextColor"
        android:layout_marginHorizontal="@dimen/page_dividePadding"
        android:layout_marginBottom="@dimen/page_dividePadding"/>

    <!--    表單-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/subpagePaddingHorizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/addOne_typeGroupRadio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/addOne_expenseRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:checked="true"
                        android:paddingEnd="@dimen/subpageRadioButtonPadding"
                        android:text="@string/addOne_expenseText"
                        android:textColor="@color/subpageTextColor"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/addOne_incomeRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/subpageRadioButtonPadding"
                        android:text="@string/addOne_incomeText"
                        android:textColor="@color/subpageTextColor"
                        android:textSize="16sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_dateText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <Button
                    android:id="@+id/addOne_date"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="dateChoose"
                    android:text="@string/addOne_defaultDateText"
                    app:strokeColor="@color/subpageOutlinedButtonColor" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_moneyText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />


                <EditText
                    android:id="@+id/addOne_edtMoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOne_payway_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_paywayText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <Button
                    android:id="@+id/addOne_expenseWay"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="payway"
                    android:text="@string/paywayText_cash"
                    app:strokeColor="@color/subpageOutlinedButtonColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOne_incomeWay_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_incomeWayText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <Button
                    android:id="@+id/addOne_incomeWay"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="incomeWay"
                    android:text="@string/paywayText_cash"
                    app:strokeColor="@color/subpageOutlinedButtonColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOne_expenseType_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_typeText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <Button
                    android:id="@+id/addOne_expenseType"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="expenseType"
                    android:text="@string/expenseTypeText_food"
                    app:strokeColor="@color/subpageOutlinedButtonColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOne_incomeType_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_typeText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <Button
                    android:id="@+id/addOne_incomeType"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="incomeType"
                    android:text="@string/incomeTypeText_salary"
                    app:strokeColor="@color/subpageOutlinedButtonColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOne_member_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_memberText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <Button
                    android:id="@+id/addOne_member"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:onClick="memberChoose"
                    android:text="@string/memberText_myself"
                    app:strokeColor="@color/subpageOutlinedButtonColor" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/page_dividePadding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/addOneTextPaddingVertical"
                    android:text="@string/addOne_descriptionText"
                    android:textColor="@color/subpageTitleTextColor"
                    android:textSize="@dimen/subpageTitleTextSize" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="textImeMultiLine"
                    app:boxBackgroundColor="@color/EditTextBackgroundColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addOne_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/accountGoal_submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#7743DB"
                android:onClick="save"
                android:text="@string/addOne_submitText"
                android:textColor="@color/subpageButtonTextColor"
                android:textSize="@dimen/subpageButtonTextSize" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>