<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/page_dividePadding"
        android:paddingVertical="@dimen/mainpageFragmentPadding"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:orientation="vertical">
            <!--        基本設定 Title-->
            <!--        div-->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="344dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/settings_basic"
                android:textColor="@color/SecondTextColor"
                android:textSize="@dimen/setting_itemTextSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_divideLineSmallSize"
                android:layout_marginVertical="@dimen/page_dividePadding"
                android:background="@color/SecondTextColor" />
            <!--        基本設定 sub-->
            <Button
                android:id="@+id/settings_basic_fixedIncome"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="resetPassword"
                android:paddingVertical="@dimen/setting_subItemPadding"
                android:text="@string/settings_changePasswordText"
                android:textColor="#000000"
                android:textSize="@dimen/setting_subItemTextSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_divideLineSmallSize"
                android:layout_marginVertical="@dimen/page_dividePadding"
                android:background="@color/SecondTextColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/settings_databaseManageText"
                android:textColor="@color/SecondTextColor"
                android:textSize="@dimen/setting_itemTextSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_divideLineSmallSize"
                android:layout_marginVertical="@dimen/page_dividePadding"
                android:background="@color/SecondTextColor" />

            <Button
                android:id="@+id/settings_backup_updateCloud"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="databaseInfo"
                android:paddingVertical="@dimen/setting_subItemPadding"
                android:text="@string/settings_databaseInfoText"
                android:textColor="#000000"
                android:textSize="@dimen/setting_subItemTextSize" />

            <Button
                android:id="@+id/settings_backup_outputCSV"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="clearDatabase"
                android:paddingVertical="@dimen/setting_subItemPadding"
                android:text="@string/settings_databaseClearText"
                android:textColor="#000000"
                android:textSize="@dimen/setting_subItemTextSize" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_divideLineSmallSize"
                android:layout_marginVertical="@dimen/page_dividePadding"
                android:background="@color/SecondTextColor" />
            <!--        幫助 Title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/settings_appInfoText"
                android:textColor="@color/SecondTextColor"
                android:textSize="@dimen/setting_itemTextSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_divideLineSmallSize"
                android:layout_marginVertical="@dimen/page_dividePadding"
                android:background="@color/SecondTextColor" />

            <Button
                android:id="@+id/settings_aboutApp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="aboutAPP"
                android:paddingVertical="@dimen/setting_subItemPadding"
                android:text="@string/settings_menuAboutApp"
                android:textColor="#000000"
                android:textSize="@dimen/setting_subItemTextSize" />

            <Button
                android:id="@+id/settings_sendInfo"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="sendInfo"
                android:paddingVertical="@dimen/setting_subItemPadding"
                android:text="@string/settings_sendInfoText"
                android:textColor="#000000"
                android:textSize="@dimen/setting_subItemTextSize" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
